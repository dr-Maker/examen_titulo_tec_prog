
@{
    List<CategoryModel> ListCategory = ViewBag.CategoryList;
    Layout = "~/Views/Shared/_layout.cshtml";
}

<div class="w-100 height">

    <h1 class="txt-center">Ingresar un nuevo Producto </h1>

    <form class="form" method="post" enctype="multipart/form-data">
        <div class="d-flex">
            <label class="f-label">Category</label>
            <input class="f-input" type="number" name="category_id" />
        </div>
        <div class="d-flex">
            <label class="f-label">Nombre del producto</label>
            <input class="f-input" type="text" name="product"/>
        </div>
        <div class="d-flex">
            <label class="f-label" >Marca</label>
            <input class="f-input" type="text" name="brand"/>
        </div>
        <div class="d-flex">
            <label class="f-label" >Talla</label>
            <input class="f-input" type="text" name="size" />
        </div>

        <div class="d-flex">
            <label class="f-label">Disponibilidad</label>
            <input class="f-input" type="number" name="stock"/>
        </div>
        <div class="d-flex">
            <label class="f-label">Precio</label>
            <input class="f-input" type="number" name="price"/>
        </div>
        <div class="d-flex">
            <label    class="f-label">Descripción</label>
            <textarea class="f-input" name="desciption"></textarea>
        </div>
        <div class="d-flex">
            <label class="f-label">Imagen</label>
            <input class="f-input" type="file" name="file" />
        </div>
        <div>
            <input class="btn_new mg-top-30" type="submit" value="Ingresar Producto" />
        </div>
    </form>
</div>








