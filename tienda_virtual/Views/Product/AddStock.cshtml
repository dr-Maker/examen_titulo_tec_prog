
@{
        @model List<ProductModel>

        List<CategoryModel> ListCategory = ViewBag.CategoryList;
        Layout = "~/Views/Shared/_layout.cshtml";
        List<ProductModel> ListProduct = ViewBag.ProductList;
        List<SizeModel> TallaList = ViewBag.TallaList;
        List<TipoTallaModel> TipoTallalist = ViewBag.TipoTallaList;


        List<SelectListItem> itemsListProduct = new List<SelectListItem>();
        itemsListProduct.Add(new SelectListItem() { Text = "Seleccione Producto", Value = "1000001" });
        foreach (var itemproduct in ListProduct)
        {
            itemsListProduct.Add(new SelectListItem() { Text = itemproduct.nombreProductId(), Value = itemproduct.Id_product.ToString() });
        }


        List<SelectListItem> itemsTipoTalla = new List<SelectListItem>();
        itemsTipoTalla.Add(new SelectListItem() { Text = "Seleccione tipo de Talla", Value = "0" });
        foreach (var itemTalla in TipoTallalist)
        {
            itemsTipoTalla.Add(new SelectListItem() { Text = itemTalla.Tipo_talla, Value = itemTalla.Id_tipo.ToString() });
        }
    }

<div class="w-100 height">
    <h1 class="txt-center">Agregar Talla</h1>

    <form class="form" method="post">
        <div class="d-flex">
            <label class="f-label">Producto</label>
            @Html.DropDownList("ProductSelect", itemsListProduct, new { @class = "f-input", id = "ProductSelect", name = "product_id" })
        </div>
        <br />
        <div class="d-flex">
            <label class="f-label">Tipo de Talla</label>
            @Html.DropDownList("TipoTalla", itemsTipoTalla, new { @class = "f-input", id = "TipoTalla" })
        </div>
        <br />

        <div class="d-flex">
            <label class="f-label">Talla</label>
        </div>
        <br />
        <div class="f-label">
            <div class="containerChekbox">
            </div>
        </div>

        <div class="d-flex space-between">
            <input class="btn_new mg-top-30 btn_disable" disabled id="btn_add_talla_product" type="submit" value="Agregar Talla Producto" />

            @Html.ActionLink("volver", "Stock", "Product",null, new { @class = "btn-cancelar mg-top-30" })
        </div>

    </form>

</div>